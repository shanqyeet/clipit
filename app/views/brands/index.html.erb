<p id="notice"><%= notice %></p>
<%= link_to "create brand", new_user_brand_path(current_user) %>
<h1>Brands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.logo %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Brand', new_brand_path %>

<div>
  <% if !@brand_list.nil? %>
    <% @brand_list.each do |brand| %>
      <% if brand.logo.file.nil? %>
      <%= image_tag("clipit-logo.png", width:"50px", height:"50px") %>
      <% else %>
      <%= image_tag("#{brand.logo.thumb}") %> 
      <% end %>
      <%= brand.name %> 
      <%= link_to "edit brand", edit_user_brand_path(brand.user_id, brand.id) %>
    <% end %>
  <% end %>
</div>


